<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.movie.dao.MovieWorkerDao">

    <!-- 根据ID查询单个工作者 -->
    <select id="selectById" resultType="com.example.movie.entity.MovieWorker">
        SELECT * FROM movie_worker WHERE worker_id = #{workerId}
    </select>

    <!-- 根据ID列表批量查询工作者 -->
    <select id="selectByIds" resultType="com.example.movie.entity.MovieWorker">
        SELECT * FROM movie_worker
        WHERE worker_id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>
